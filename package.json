{
  "name": "@modelcontextprotocol/server-fidora",
  "version": "1.0.0",
  "description": "MCP server for role-based prompting system",
  "license": "MIT",
  "author": "Anthropic, PBC (https://anthropic.com)",
  "homepage": "https://modelcontextprotocol.io",
  "bugs": "https://github.com/modelcontextprotocol/servers/issues",
  "type": "module",
  "bin": {
    "mcp-server-fidora": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "concurrently \"npm run watch\" \"nodemon --watch dist dist/index.js\"",
    "dev:old": "node --loader ts-node/esm --watch src/index.ts",
    "dev:nodemon": "nodemon",
    "dev:hot": "nodemon --config nodemon.ts.json",
    "dev:ts": "node --loader ts-node/esm src/index.ts",
    "dev:ts:debug": "NODE_OPTIONS=\"--trace-warnings\" node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "docs": "node --loader ts-node/esm src/infrastructure/docs/index.ts",
    "docs:build": "tsc && node dist/infrastructure/docs/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "docker:build": "npm run build && docker build -t fidora-app:latest -f Dockerfile .",
    "docker:run": "docker run --name fidora --rm -i fidora-app:latest",
    "docker:stop": "docker stop fidora || true",
    "docker:deploy": "npm run docker:stop && npm run docker:build && npm run docker:run",
    "docker:dev:build": "docker build -t fidora-dev:latest -f Dockerfile.dev .",
    "docker:dev:run": "docker run --name fidora --rm -i -v \"$(pwd)/src:/app/src\" -v \"$(pwd)/dist:/app/dist\" fidora-dev:latest",
    "docker:dev:stop": "docker stop fidora || true",
    "docker:dev": "npm run docker:dev:stop && npm run docker:dev:build && npm run docker:dev:run",
    "docker:dev:logs": "docker logs -f fidora"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^3.1.2",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "express": "^5.1.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
