{
  "name": "@modelcontextprotocol/server-fidora",
  "version": "1.0.0",
  "description": "MCP server for role-based prompting system",
  "license": "MIT",
  "author": "Anthropic, PBC (https://anthropic.com)",
  "homepage": "https://modelcontextprotocol.io",
  "bugs": "https://github.com/modelcontextprotocol/servers/issues",
  "type": "module",
  "bin": {
    "mcp-server-fidora": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "concurrently \"npm run watch\" \"nodemon --watch dist dist/index.js\"",
    "dev:old": "node --loader ts-node/esm --watch src/index.ts",
    "dev:nodemon": "nodemon",
    "dev:hot": "nodemon --exec \"node --loader ts-node/esm src/index.ts\"",
    "dev:ts": "node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^3.1.2",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
