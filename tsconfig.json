{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["./tests", "./src/**/*.test.ts", "./vitest.config.ts"]
}
