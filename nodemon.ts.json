{
  "watch": ["src"],
  "ext": "ts,json",
  "exec": "node --loader ts-node/esm src/index.ts",
  "ignore": ["node_modules", ".git", "dist"],
  "delay": "500",
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "true",
    "LOG_LEVEL": "DEBUG",
    "TS_NODE_PROJECT": "./tsconfig.json"
  }
}
